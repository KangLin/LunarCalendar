#!/bin/sh
# postinst script for lunarcalendar
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

INSTALL_ROOT=/opt/LunarCalendar

case "$1" in
    configure)
        mkdir -p $INSTALL_ROOT/log
        chmod -R 777 $INSTALL_ROOT/log
        chmod -R a+w $INSTALL_ROOT/etc
        if [ ! -d $INSTALL_ROOT/bin/log ]; then
            ln -s $INSTALL_ROOT/log $INSTALL_ROOT/bin/log
        fi
        if [ ! -f /usr/share/applications/org.Rabbit.LunarCalendar.desktop ]; then
            ln -s ${INSTALL_ROOT}/share/applications/org.Rabbit.LunarCalendar.desktop /usr/share/applications/org.Rabbit.LunarCalendar.desktop
        fi
        if [ ! -f /usr/share/pixmaps/calendar.png ]; then
            if [ ! -d /usr/share/pixmaps ]; then
                mkdir -p /usr/share/pixmaps
            fi
            ln -s ${INSTALL_ROOT}/share/pixmaps/LunarCalendar.png /usr/share/pixmaps/LunarCalendar.png
        fi
        #echo "${INSTALL_ROOT}/lib" > /etc/ld.so.conf.d/LunarCalendar.conf
        #echo "${INSTALL_ROOT}/bin" >> /etc/ld.so.conf.d/LunarCalendar.conf
	    export QT_VERSION_DIR=
        if [ -n "${QT_VERSION_DIR}" ]; then
            echo "/opt/qt${QT_VERSION_DIR}/lib" >> /etc/ld.so.conf.d/FaceRecognizer.conf
        fi
        ldconfig
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        rm -fr /usr/share/applications/org.Rabbit.LunarCalendar.desktop
        rm -fr /etc/ld.so.conf.d/LunarCalendar.conf
        rm -fr /usr/share/pixmaps/LunarCalendar.png
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
